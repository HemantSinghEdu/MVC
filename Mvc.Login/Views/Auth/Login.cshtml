@model Mvc.Login.ViewModels.UserViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@Html.ValidationSummary(true)

@using(Html.BeginForm())
{
    @Html.LabelFor(user => user.Email) <br/>
    @Html.TextBoxFor(user => user.Email) <br/>
    
    @Html.LabelFor(user => user.Password) <br/>
    @Html.PasswordFor(user => user.Password)<br/>
    <p><button type="submit">Log In</button></p>
}